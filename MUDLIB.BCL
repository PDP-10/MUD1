$(	let h,m,c=?,?,?
	if numbargs()<2 t_valof $[ $MSTIME	AC,	0	$]
	h,m,c_t/3600000,(t REM 3600000)/60000,(t REM 60000)/1000
	if h<10 writech(s,'0'); writeno(s,h);	writech(s,':')
	if m<10 writech(s,'0'); writeno(s,m);	writech(s,':')
