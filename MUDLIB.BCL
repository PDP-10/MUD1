and getmblock(sht)=valof
$(	let blk=? and messages=? and count=0
	unless numbargs() sht_false
	messages_sht->@shortmess, @longmess
	jar(lvmdoor)
	until !messages
	$(	unjar(lvmdoor)
		if count=napct then
		$(	unless magic
