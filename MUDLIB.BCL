		$)
		$[	$aos		count
			$setz	1,	0
			$sleep	1,	0
		$]
		jar(lvmdoor)
	$)
	blk_!messages
	!messages_LINK of blk
	unjar(lvmdoor)
	clearvec(blk,sht->2,15)
	SHORT of blk_messages
	resultis blk
