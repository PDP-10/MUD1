AND RUN(D,F,E,PP,S) BE
$(	LET T,U,V,W,X,Y,Z=?,?,?,?,?,?,?
	SWITCHON NUMBARGS() INTO
	$(	CASE 1: F_D;D_$SIXBIT "SYS"
		CASE 2: E_0
		CASE 3: PP_0
		CASE 4: S_0
	$)
	T,U,V,W,X,Y,Z_SIXBIT(D),SIXBIT(F),SIXBIT(E),0,PP,0,0
	$[	$HRLI	AC,	7(P) // LV T
		$HRRI	AC,	#144 // JOBS LOWEST CORE+4
		$BLT	AC,	#152  // THE 7 WORD ARG BLOCK
		$MOVS	AC,	CODEX // XWD #140,CODE
		$BLT	AC,	#143  // MOVE THE CODE DOWN
		$HRL	PDL,	S   // STARTING OFFSET
		$HRRI	PDL,	#144
		$MOVE	AC,	ONEONE
		$JRST		#140
CODE:		$CORE	AC,	0    // REDUCE CORE
		$HALT		#141
		$RUN	PDL,	0   // CALL THE PROGRAM
		$HALT		#143
CODEX:		$EXP	#140,	CODE
ONEONE: 	$EXP	#1,	#1
	$]
$)
AND SIXBIT(S) = VALOF
$[	$HLRZ	AC,	S
	$JUMPE	AC,	STRSIX
	$MOVE	AC,	S	// ALREADY SIXBIT
	$(	return		$)
STRSIX: $SETZ	AC,	0
	$SKIPN	0,	S
	$(	return		$)
	$MOVSI	B,	LH&&(BYTE 7:29)
	$HRR	B,	S
	$LDB	C,	B
	$CAILE	C,	6
	$MOVEI	C,	6
	$HRLZI	E,	#600
SIXL3:	$SOSGE	0,	C
	$(	return		$)
	$ILDB	D,	B
	$CAIL	D,	#40
	$CAILE	D,	#137
	$JRST	SIXL1
	$SUBI	D,	#40
SIXL2:	$IDPB	D,	E
	$JRST		SIXL3
SIXL1:	$CAIGE	D,	#140
	$MOVEI	D,	#100
	$SUBI	D,	#100
	$JRST		SIXL2
$]
